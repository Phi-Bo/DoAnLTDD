<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imfrUser"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/person"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtscChat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/first_user_txt"
        android:paddingStart="10dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="10dp"
        android:text="TextView"
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintBottom_toBottomOf="@+id/imfrUser"
        app:layout_constraintEnd_toStartOf="@+id/imScUser"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imfrUser"
        app:layout_constraintTop_toTopOf="@+id/imfrUser"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_default="wrap" />

    <TextView
        android:id="@+id/txtfrChat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/secont_user_txt"
        android:paddingStart="10dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="10dp"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imfrUser"
        app:layout_constraintEnd_toStartOf="@+id/imScUser"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imfrUser"
        app:layout_constraintTop_toTopOf="@+id/imfrUser"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_default="wrap" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imScUser"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>